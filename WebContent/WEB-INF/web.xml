<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name></display-name>
	<filter>
		<filter-name>CharactFilter</filter-name>
		<filter-class>cn.liyou.tools.CharactFilter</filter-class>
		<init-param>
			<param-name>encode</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharactFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>cn.liyou.servlet.LoginServlet</servlet-class>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CheckUserNameServlet</servlet-name>
		<servlet-class>cn.liyou.servlet.CheckUserNameServlet</servlet-class>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckUserNameServlet</servlet-name>
		<url-pattern>/checkName</url-pattern>
	</servlet-mapping>
  
  	<servlet>
		<servlet-name>AddUserServlet</servlet-name>
		<servlet-class>cn.liyou.servlet.AddUserServlet</servlet-class>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>AddUserServlet</servlet-name>
		<url-pattern>/AddUserServlet</url-pattern>
	</servlet-mapping>
	
	
  	<servlet>
		<servlet-name>CheckUphoneServlet</servlet-name>
		<servlet-class>cn.liyou.servlet.CheckUphoneServlet</servlet-class>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckUphoneServlet</servlet-name>
		<url-pattern>/checkUphone</url-pattern>
	</servlet-mapping>
  	
  	<servlet>
		<servlet-name>DetailServlet</servlet-name>
		<servlet-class>cn.liyou.servlet.DetailServlet</servlet-class>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>DetailServlet</servlet-name>
		<url-pattern>/DetailServlet</url-pattern>
	</servlet-mapping>
  	
  	
  
</web-app>